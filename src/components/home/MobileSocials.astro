---
const socials = [
  {
    name: 'Mail',
    url: 'mailto:info@linkpurr.com',
    icon: 'i-uil-mail',
  },
  {
    name: 'Twitter',
    url: 'https://www.twitter.com/LinkPurr',
    icon: 'i-uil-twitter',
  },
  {
    name: 'LinkedIn',
    url: 'https://www.linkedin.com/in/elianvancutsem',
    icon: 'i-uil-linkedin',
  },
];
---

<section class='md:hidden'>
  <h2 class='hidden'>Socials section</h2>
  <ul class='flex justify-between'>
    {
      socials.map((item) => (
        <li class='bg-white px-4 py-2 text-green border-black border-2 rounded card-shadow'>
          <a href={item.url} target='_blank' title={`Go to ${item.name}`}>
            <div class:list={[item.icon, 'p-6']} />
          </a>
        </li>
      ))
    }
  </ul>
</section>
